alias ll='ls -hlF --color'
alias lla='ls -halF --color'
alias ..="cd .."
alias sudo="sudo "
alias dirs="dirs -p -v"
alias relogin='exec "${SHELL}" -l'
alias sudovim="sudo vim -u ~/.vimrc"
export HISTSIZE=100000000
export HISTFILESIZE=100000000
export HISTIGNORE=ls:ll:history:pwd

if [[ -t 1 ]]; then
    bind '"\C-j\C-j":"pushd +1 > /dev/null 2>&1 && pwd"'
    bind '"\C-j\C-k":"pushd -0 > /dev/null 2>&1 && pwd"'
    bind '"\C-j\C-a":"pushd . > /dev/null 2>&1 && pwd"'
    bind '"\C-j\C-d":"pushd +1 > /dev/null 2>&1 && popd -0 -n > /dev/null 2>&1 && pwd"'
    bind '"\C-j\C-l":"dirs -p -v"'
    bind -x '"\C-x\C-f":"fg"'
fi

source ~/.git-prompt.sh

if type __git_ps1 > /dev/null 2>&1 ; then
  PROMPT_COMMAND="__git_ps1 '\h:\W \u' '\\\$ '; $PROMPT_COMMAND"
  GIT_PS1_SHOWDIRTYSTATE=true
  GIT_PS1_SHOWSTASHSTATE=true
  GIT_PS1_SHOWUNTRACKEDFILES=true
  GIT_PS1_SHOWUPSTREAM="auto"
  GIT_PS1_SHOWCOLORHINTS=true
fi
export PS1='\[\033[32m\]\u@\h\[\033[00m\]:\[\033[34m\]\w\[\033[31m\]$(__git_ps1)\[\033[00m\]\$\[\033[39m\] '
